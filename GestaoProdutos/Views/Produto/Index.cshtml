@model IEnumerable<CoreBusines.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeDoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoDoProduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoDoProduto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoDoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDoProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecoDoProduto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
